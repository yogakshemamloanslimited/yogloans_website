 <section class="welcome-container"
        style="background-image: url(images/welcome/investors.jpg);">
        <h1 >Customer :  @ViewBag.CustomerId </h1>
    <div class="button">
        <p><a href="javascript:history.back()" id="return-link">Home</a>  - Online Services</p>
     </div>

    </section>

    <style>
        .welcome-container{
            height: 300px;
        }
        a{
            text-decoration:none;
            color:white;
        }
    </style>

    
<script>
    const link = document.getElementById('return-link');
    const ref = document.referrer;

    if (ref) {
        // Create a temporary anchor to parse the URL
        const url = new URL(ref);

        // Get the last part of the path (e.g., 'investors' from '/investors')
        let pageName = url.pathname.split('/').filter(Boolean).pop() || 'Home';

        // Make it user-friendly
        pageName = pageName.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase());

        link.textContent = pageName;
        link.href = ref;
    }
</script>