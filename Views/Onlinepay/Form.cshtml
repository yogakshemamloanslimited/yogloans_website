      function addpay(no, product, due_amount) {
        // Check if the loan number already exists in the table
        let exists = false;
        $('#table-fill tr').each(function() {
            // The first cell in each row contains the loan number
            let loanNo = $(this).find('td:first').text();
            if (loanNo === no) {
                exists = true;
                return false; // break loop
            }
        });

        if (exists) {
            Swal.fire({
                icon: 'warning',
                title: 'Duplicate Entry',
                text: 'This loan number is already added.'
            });
            return;
        }

        $('#table-fill').show();
        $('#total-amount-card').show();
        var amount = $('#amount').val();
        $('#table-fill').append(
            `
            <tr>
                <td>${no}</td>
                <td>${product}</td>
                <td>${due_amount}</td>
                <td class="amount-pay">${amount}</td>
                <input value="${no}" name="loan_no" type="hidden">
                <input value="${amount}" name="pay_amount" type="hidden" id="pay_amount"> 
                <td><button class="btn btn-danger btn-sm remove-row">Remove</button></td>
            </tr>
            `
        );
        updateTotalPay();
    }

    // Remove row on button click
    $('#table-fill').on('click', '.remove-row', function () {
        $(this).closest('tr').remove();
        if ($('#table-fill tr').length === 1) {
            $('#table-fill').hide();
        }
        updateTotalPay();
    });


    $(document).ready(function () {
        if ($('#table-fill tr').length === 1) {
            $('#table-fill').hide();
        }
    });

    function updateTotalPay() {
        let total = 0;
        $('.amount-pay').each(function() {
            let val = parseFloat($(this).text());
            if (!isNaN(val)) {
                total += val;
            }
        });
        $('#totalpay').text(total.toFixed(2));
    }

 $('#tables').on('submit', function (e) {
    e.preventDefault();

    var requestData = {
    CustomerId: $('#customerId').val(),
    CustomerName: $('#customerName').val(),
    CustomerMobile: $('#mobile').val(), // Assuming mobile is the customer's mobile number
    Amount: parseFloat($('#amount').val()), // This is the total amount for all payments
    GridRows: []
};

// Suppose you loop through table rows to collect loan/payment info:
$('#table-fill tr').each(function() {
    var loanNo = $(this).find('td:first').text(); // Assuming loan number is in the first column
    var payAmount = $(this).find('.amount-pay').text(); // Assuming payment amount is in the last column
    if (loanNo && payAmount) {
        requestData.GridRows.push({
