<script>
    // Function to handle image preview
    function setupImageUpload(uploadId, previewId, placeholderId) {
        const input = document.getElementById(uploadId);
        const preview = document.getElementById(previewId);
        const placeholder = document.getElementById(placeholderId);

        input.addEventListener('change', function () {
            const file = this.files[0];
            if (file) {
                const reader = new FileReader();

                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                    placeholder.style.display = 'none';
                };

                reader.readAsDataURL(file);
            }
        });
    }

    // Setup image uploads for all sections
    setupImageUpload('gold-upload-1', 'gold-preview-1', 'gold-placeholder-1');
    setupImageUpload('gold-upload-2', 'gold-preview-2', 'gold-placeholder-2');
    setupImageUpload('business-upload-1', 'business-preview-1', 'business-placeholder-1');
    setupImageUpload('business-upload-2', 'business-preview-2', 'business-placeholder-2');
    setupImageUpload('vehicle-upload-1', 'vehicle-preview-1', 'vehicle-placeholder-1');
    setupImageUpload('vehicle-upload-2', 'vehicle-preview-2', 'vehicle-placeholder-2');
    setupImageUpload('cd-upload-1', 'cd-preview-1', 'cd-placeholder-1');
    setupImageUpload('cd-upload-2', 'cd-preview-2', 'cd-placeholder-2');

    // Form validation
    function validateForm(formId) {
        const form = document.getElementById(formId);
        const header = form.querySelector('input[name="Header"]');
        const content = form.querySelector('textarea[name="SubContent"]');
        const headerError = form.querySelector('#' + formId + 'HeaderError');
        const contentError = form.querySelector('#' + formId + 'ContentError');
        let isValid = true;

        // Clear previous errors
        headerError.textContent = '';
        contentError.textContent = '';

        // Validate header
        if (!header.value.trim()) {
            headerError.textContent = 'Header is required';
            header.classList.add('is-invalid');
            isValid = false;
        } else {
            header.classList.remove('is-invalid');
        }

        // Validate content
        if (!content.value.trim()) {
            contentError.textContent = 'Content is required';
            content.classList.add('is-invalid');
            isValid = false;
        } else {
            content.classList.remove('is-invalid');
        }

        return isValid;
    }

    // Add form validation to all forms
    document.getElementById('goldLoanForm').addEventListener('submit', function(e) {
        if (!validateForm('gold')) {
            e.preventDefault();
        }
    });

    document.getElementById('businessLoanForm').addEventListener('submit', function(e) {
        if (!validateForm('business')) {
            e.preventDefault();
        }
    });

    document.getElementById('vehicleLoanForm').addEventListener('submit', function(e) {
        if (!validateForm('vehicle')) {
            e.preventDefault();
        }
    });

    document.getElementById('cdLoanForm').addEventListener('submit', function(e) {
        if (!validateForm('cd')) {
            e.preventDefault();
        }
    });

    // Auto-hide alerts after 5 seconds
    setTimeout(function() {
        const alerts = document.querySelectorAll('.alert');
        alerts.forEach(function(alert) {
            const bsAlert = new bootstrap.Alert(alert);
            bsAlert.close();
        });
    }, 5000);
</script>