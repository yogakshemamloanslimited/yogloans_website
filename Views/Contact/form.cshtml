    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
    $(document).ready(function() {
        $('#enquiryForm').on('submit', function(e) {
            e.preventDefault();

            var data = {
                enquiry_name: $('#enquiry_name').val(),
                enquiry_address: $('#enquiry_address').val(),
                contact_no: $('#contact_no').val(),
                email_id: $('#email_id').val(),
                created_date: new Date().toISOString()
            };

            $.ajax({
                url: 'http://pfl.yogloans.com:8580/api/enquiry',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function(response) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Thank you!',
                        text: response.Message || 'Your enquiry has been submitted successfully!',
                        showConfirmButton: false,
                        timer: 2000,
                        background: '#f0fff0',
                        color: '#155724',
                        iconColor: '#28a745',
                        position: 'center',
                        showClass: {
                            popup: 'animate__animated animate__fadeInDown'
                        },
                        hideClass: {
                            popup: 'animate__animated animate__fadeOutUp'
                        }
                    });
                    $('#enquiryForm')[0].reset();
                },
                error: function(xhr) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Error submitting enquiry. Please try again.'
                    });
                }
            });
        });
    });
    </script>Z