@model yogloansdotnet.Models.LoanGroupViewModel
  <link rel="stylesheet" href="~/css/home/about.css" asp-append-version="true">
  <div class="about-container">
        <div class="content">
          
            @if (Model.AboutContent != null && Model.AboutContent.Any()) {
                <p>@Model.AboutContent.First().Header</p>
            }
            @{
                var preview = "";
                if (Model.AboutContent != null && Model.AboutContent.Any()) {
                    var sentences = Model.AboutContent.First().Content?.Split(new[] { '.' }, StringSplitOptions.RemoveEmptyEntries);
                    preview = sentences != null ? string.Join(". ", sentences.Take(3)) + (sentences.Length > 3 ? "..." : "") : "";
                }
            }
            @if (!string.IsNullOrWhiteSpace(preview))
            {
                <p>@preview</p>
            }
      <button onclick="window.location.href='/about'">Know More +</button>

        </div>
    </div>