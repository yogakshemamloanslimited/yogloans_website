    <script>
        
 document.addEventListener('DOMContentLoaded', function() {
        const carousel = document.querySelector('.reviews-carousel');
        const cards = Array.from(document.querySelectorAll('.review-card'));
        const leftBtn = document.querySelector('.review-arrow.left');
        const rightBtn = document.querySelector('.review-arrow.right');
        let start = 0;
        const visibleCount = 4;

        function updateCarousel() {
            cards.forEach((card, i) => {
                if (i >= start && i < start + visibleCount) {
                    card.style.display = 'flex';
                    card.style.opacity = '1';
                } else {
                    card.style.display = 'none';
                    card.style.opacity = '0';
                }
            });

            // Update button visibility
            leftBtn.style.visibility = start === 0 ? 'hidden' : 'visible';
            rightBtn.style.visibility = start + visibleCount >= cards.length ? 'hidden' : 'visible';
        }

        leftBtn.addEventListener('click', function() {
            if (start > 0) {
                start--;
                updateCarousel();
            }
        });

        rightBtn.addEventListener('click', function() {
            if (start + visibleCount < cards.length) {
                start++;
                updateCarousel();
            }
        });

        // Initialize carousel
        updateCarousel();
    });
    </script>