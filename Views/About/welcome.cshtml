@model List<yogloansdotnet.Models.AboutWelcome>
 


<!-- Desktop/Tablet Section (Image1) -->
<section class="welcome-container"
    style="background-image: url(@(Model.FirstOrDefault()?.Image1 ?? ""))" id="welcome-desktop">
    <h1 id="header">About Us</h1>
    <div class="button">
        <p><a href="javascript:history.back()" id="return-link">Home</a> - About Us</p>
    </div>
</section>

<!-- Mobile Section (Image2) -->
<section class="welcome-container"
    style="background-image: url(@(Model.FirstOrDefault()?.Image2 ?? ""))" id="welcome-mobile">
    <h1 id="header">About Us</h1>
    <div class="button">
        <p><a href="javascript:history.back()" id="return-link">Home</a> - About Us
</p>
    </div>
</section>

<style>
    .welcome-container{
        height: 300px;
    }
    a{
        text-decoration:none;
        color:white;
    }
    #welcome-mobile { display: none; }
    #welcome-desktop { display: flex; }
    @@media (max-width: 767px) {
        #welcome-desktop { display: none; }
        #welcome-mobile { display: flex; }
    }
</style>


<script>
    const link = document.getElementById('return-link');
    const ref = document.referrer;

    if (ref) {
        // Create a temporary anchor to parse the URL
        const url = new URL(ref);

        // Get the last part of the path (e.g., 'investors' from '/investors')
        let pageName = url.pathname.split('/').filter(Boolean).pop() || 'Home';

        // Make it user-friendly
        pageName = pageName.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase());

        link.textContent = pageName;
        link.href = ref;
    }
</script>