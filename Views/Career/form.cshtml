
<link rel="stylesheet" href="~/css/career/form.css" asp-append-version="true">

<section class="application-section" id="application">
    <div class="main-content">
        <h2>Apply Now</h2>
        <form class="application-form">
            <input type="text" placeholder="Full Name" required>
            <input type="email" placeholder="Email Address" required>
            <input type="text" placeholder="Position Applying For" required>
            <input type="file" accept=".pdf,.doc,.docx" required>
            <textarea rows="4" placeholder="Cover Letter / Message" required></textarea>
            <button type="submit">Submit Application</button>
        </form>
    </div>
</section>