@model yogloansdotnet.Models.ServicesLoanModel

<section class="welcome-container"
    style="background-image: url(@(Model.Homwelcome.FirstOrDefault()?.Image1 ?? ""))" id="welcome-desktop">
    <h1>@Model.Homwelcome.FirstOrDefault()?.Header</h1>
    <div class="button">
        <p><a href="/">Home</a>  <a href=""> - @Model.Homwelcome.FirstOrDefault()?.Header</a></p>
    </div>
</section>

<!-- Mobile Section (Image2) -->
<section class="welcome-container"
    style="background-image: url(@(Model.Homwelcome.FirstOrDefault()?.Image2 ?? ""))" id="welcome-mobile">
   <h1>@Model.Homwelcome.FirstOrDefault()?.Header</h1>
    <div class="button">
        <p><a href="/">Home</a>  <a href=""> - @Model.Homwelcome.FirstOrDefault()?.Header</a></p>
    </div>
</section>

<style>
    .welcome-container {
        height: 300px;
    }

    a {
        text-decoration: none;
        color: white;
    }

    #welcome-mobile {
        display: none;
    }

    #welcome-desktop {
        display: flex;
    }

    @@media (max-width: 767px) {
        #welcome-desktop {
            display: none;
        }

        #welcome-mobile {
            display: flex;
        }
    }
</style>
